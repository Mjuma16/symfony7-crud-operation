<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
		<link type="stylesheet" href="style.css"/>
		<title>CRUD OPERATION</title>
	</head>
	<body>
		<div class="container d-flex mt-5">
			<div class="w-50 border px-5 shadow-lg mx-auto">
				{{ form_start(form) }}
				<h1 class="mt-5 mb-4 text-center shadow">Add Todo</h1>

				<!-- Name Field -->
				<div class="mb-3">
					<label for="name" class="form-label">{{ form_label(form.name) }}</label>
					{{ form_widget(form.name, { 'attr': { 'class': 'form-control' } }) }}
					{% for error in form.name.vars.errors %}
						<div class="invalid-feedback d-block">{{ error.message }}</div>
					{% endfor %}
				</div>

				<!-- Title Field -->
				<div class="mb-3">
					<label for="title" class="form-label">{{ form_label(form.title) }}</label>
					{{ form_widget(form.title, { 'attr': { 'class': 'form-control' } }) }}
					{% for error in form.title.vars.errors %}
						<div class="invalid-feedback d-block">{{ error.message }}</div>
					{% endfor %}
				</div>

				<!-- Description Field -->
				<div class="mb-3">
					<label for="description" class="form-label">{{ form_label(form.description) }}</label>
					{{ form_widget(form.description, { 'attr': { 'class': 'form-control' } }) }}
					{% for error in form.description.vars.errors %}
						<div class="invalid-feedback d-block">{{ error.message }}</div>
					{% endfor %}
				</div>

				<div class="d-flex justify-content-end mt-4 mb-5">
					<button type="submit" class="btn btn-primary px-4 py-2 me-3 rounded shadow">Save</button>
					<a href="{{ path('todos') }}" class="btn btn-secondary px-4 py-2 rounded shadow">Cancel</a>
				</div>

				{{ form_end(form) }}


			</div>


			<br><br><br><br><br><br>
		</div>
		<script src="main.js"></script>
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
	</body>
</html>
