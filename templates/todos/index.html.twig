<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
		<link type="stylesheet" href="style.css"/>
		<title>CRUD OPERATION</title>
	</head>
	<body>
		<div class="container">
			<h1 class="text-center mt-5 mb-4 text-primary">Add TODO</h1>
			{# <div class="d-flex justify-content-end my-3 ">
			            <button class="btn btn-primary px-4 py-2 me-3 rounded shadow" id="add-item-button">Add Item</button>
			            <button class="btn btn-primary px-4 py-2 me-3 rounded shadow" id="hide-item-button">Hide</button>
			        </div> #}
			<div class="d-flex justify-content-end my-3 ">
				<a href="{{ path('add_item') }}" class="uppercase border rounded rounded px-4 py-2 bg-primary text-decoration-none text-light">Add Item</a>
			</div>
			<!-- list of all todo tasks -->
			<table class="table table-striped table-hover border shadow">
				<thead class="text-center">
					<tr>
						<th scope="col">Id</th>
						<th scope="col">Name</th>
						<th scope="col">Title</th>
						<th scope="col">Description</th>
						<th scope="col">Action</th>
					</tr>
				</thead>
				<tbody class="text-center">

					{% for todo in todos %}
						<tr>
							<th scope="row" class="pt-3">{{todo.id}}</th>
							<td class="pt-3">{{todo.name}}</td>
							<td class="pt-3">{{todo.title}}</td>
							<td class="pt-3">{{todo.description}}</td>
							<td>
								<button class="btn btn-primary rounded px-4 py-2 me-2 shadow">
									<a href="{{ path('edit_item', { 'id': todo.id }) }}" class="text-light text-decoration-none">Edit</a>
								</button>
								<button class="btn btn-danger rounded px-3 py-2 shadow">
									<a href="{{ path('delete_item', { 'id': todo.id }) }}" class="text-white text-decoration-none">Delete</a>
								</button>
							</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
			<br><br><br>
		</div>
		<script src="main.js"></script>
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
	</body>
</html>
